[
  {
    "name": "global -> require - variables",
    "cases": [
      {
        "input": "a {{require('/acceptance/tpl/function/DOESNT_EXISTS.tpl') -> isUndefined()}} b",
        "expectedException": {
          "line": "1",
          "message": "/acceptance/tpl/function/DOESNT_EXISTS.tpl"
        }
      },
      {
        "input": "a {{var x = require('/acceptance/tpl/function/test_for_require.tpl')}} b {{x.x}} c {{x.Z.a}} d {{x.Z.b}} e",
        "expectedResult": "a  b 10 c 111 d 222 e"
      }
    ]
  },
  {
    "name": "global -> require - macros",
    "cases": [
      {
        "input": "a {{var x = require('/acceptance/tpl/function/test_for_require.tpl')}} b {{x -> macro_name()}} c",
        "expectedResult": "a  b inner macro output c"
      },
      {
        "input": "a {{var x = require('/acceptance/tpl/function/test_for_require.tpl')}} b {{x()}} c",
        "expectedResult": "a  b  c"
      },
      {
        "input": "a {{var x = require('/acceptance/tpl/function/test_for_require.tpl')}} b {{x -> param('parameter')}} c",
        "expectedResult": "a  b parameter c"
      },
      {
        "input": "a {{var x = require('/acceptance/tpl/function/test_for_require1.tpl')}} b {{x -> param('parameter')}} c",
        "expectedResult": "a  b parameter c"
      },
      {
        "input": "a {{var x = require('/acceptance/tpl/function/test_for_require_return.tpl')}} b {{x -> param('parameter')}} c",
        "expectedResult": "a  b blablabla c"
      }
    ]
  }
]